doctype 5
html
	head
		title #{title}
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/preview_styles.css')
		link(rel='stylesheet', href='/stylesheets/picker.css')
		meta(name="viewport",content="width=device-width, initial-scale=1.0, user-scalable=no")
body
	block navigation
	nav#nav.slide-content.left
		ul.main_navigation
			//Mobile and Tablet navigtion
			li 
				a(href="/") home
			li 
				a(href="#") products
			li 
				a(href="#") services
			li.active 
				a(href="#") configure
			li
				a(href="#") contact
	nav#nav.slide-content.right
		ul.main_navigation.basket
			li
				a(href="/") My config
	div#content
		block picker
		block preview
	script(type='text/javascript',src='/javascripts/vendor/jquery/jquery.min.js')
	script(type='text/javascript',src='/javascripts/vendor/modernizr/modernizr.js')
	script(type='text/javascript',src='/javascripts/application/pages.js')
	script(type='text/javascript',src='/javascripts/application/slider.js')
	script(type='text/javascript',src='/javascripts/application/picker.js')
	script(type='text/javascript',src='/javascripts/application/saveConfig.js')
	
